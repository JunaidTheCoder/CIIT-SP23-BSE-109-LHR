<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Apply the background image to the body */
        body {
            background-image: url('pexels-eberhardgross-640781.jpg'); /* Background image URL */
            background-size: cover;
            background-position: center;
            font-family: Arial, sans-serif;
        }

        /* Header styling */
        .header {
            background-color: rgba(52, 58, 64, 0.6); /* Slight transparency for header */
            color: white;
            padding: 20px;
            text-align: center;
        }

        .header h1 {
            font-size: 2rem;
            margin: 0;
        }

        /* Styling the Add New Product button */
        .add-product-btn {
            font-weight: bold;
            background-color: #343a40;
            color: white;
            margin: 20px 0;
            padding: 10px 20px;
            display: inline-block;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .add-product-btn:hover {
            background-color: lightslategray;
            text-decoration: none;
            color: white;
        }

        /* Styling for the product table */
        .product-table {
            background-color: rgba(255, 255, 255, 0.8); /* Transparent background for table */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            backdrop-filter: blur(5px); /* Optional: adds blur to the background behind the table */
        }

        .table th, .table td {
            vertical-align: middle;
        }

        /* Table header styling */
        .table thead th {
            background-color: #343a40;
            color: #ffffff;
        }

        /* Remove button styling */
        .btn-remove {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-remove:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <div class="header">
        <h1 style="font-family:'Courier New', Courier, monospace; letter-spacing: 0px;">ADMIN PANEL</h1>
    </div>

    <!-- Main Container -->
    <div class="container my-4">
        <!-- Add New Product Button -->
        <div class="text-center">
            <a href="formPage" class="add-product-btn">Add New Product</a>
            <a href="order" class="add-product-btn">View Orders</a>
            <a href="index" class="add-product-btn">Home Page</a>
        </div>

        <!-- Product Table -->
        <div class="product-table table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example product row -->
                    <tr>
                        <td>001</td>
                        <td>Saeed Ghani Perfume</td>
                        <td>5000</td>
                        <td>Perfumes</td>
                        <td>
                            <!-- Remove button -->
                            <a href="admin" class="btn-remove" >Remove</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Function to remove product (you can implement actual functionality here)
        function removeProduct(productId) {
            if (confirm("Are you sure you want to remove this product?")) {
                // In a real app, here you would send a request to remove the product from the database
                alert("Product with ID " + productId + " removed.");
            }
        }
    </script>
</body>

</html>
